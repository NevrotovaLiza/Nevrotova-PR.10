<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51FFB6"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="376dp"
        android:layout_height="90dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="73dp"
        android:backgroundTint="#6AFE8A"
        android:text="Моё смарт-устройство"
        android:textAlignment="viewEnd"
        android:textColor="#000000"
        android:textIsSelectable="true"
        app:icon="@drawable/vector"
        app:iconTint="#071E94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="376dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="179dp"
        android:backgroundTint="#E5E5E5"
        android:text="1.3 km"
        android:textAlignment="viewEnd"
        android:textColor="#000000"
        android:textIsSelectable="true"
        app:cornerRadius="15dp"
        app:icon="@drawable/ff"
        app:iconTint="#880794"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="376dp"
        android:layout_height="76dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="268dp"
        android:backgroundTint="#E5E5E5"
        android:text="59 kcal"
        android:textAlignment="viewEnd"
        android:textColor="#000000"
        android:textIsSelectable="true"
        app:cornerRadius="15dp"
        app:icon="@drawable/fi"
        app:iconTint="#FC8B3A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="376dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="359dp"
        android:backgroundTint="#E5E5E5"
        android:text="30 min"
        android:textAlignment="viewEnd"
        android:textColor="#000000"
        android:textIsSelectable="true"
        app:cornerRadius="15dp"
        app:icon="@drawable/ch"
        app:iconTint="#7888D8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="376dp"
        android:layout_height="76dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="448dp"
        android:backgroundTint="#E5E5E5"
        android:text="1583 steps"
        android:textAlignment="viewEnd"
        android:textColor="#000000"
        android:textIsSelectable="true"
        app:cornerRadius="15dp"
        app:icon="@drawable/efef"
        app:iconTint="#4E9407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>